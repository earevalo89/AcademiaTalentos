@model  List<ElVinoDorado.Website.Models.Vino>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>El Vino Dorado</title>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/jquery-3.4.1.min.js"></script>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            padding: 20px;
            background-color: #6c757d;
            color: whitesmoke;
        }

        .card-body {
            margin-bottom: 5px !important;
        }
    </style>
</head>
<body>    
    <div class="container-fluid">
        <h3>El Vino Dorado</h3>
        <div class="row">
            @foreach (var vino in Model)
            {
                <div class="col-md-4">
                    <div class="card bg-dark">
                        <div class="card-body">
                            <h5 class="card-title">@(vino.Nombre)</h5>
                            <p class="card-text text-info">Puntuación: @(vino.Puntuacion)</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <br />
        <h2>Interés</h2>
        <form action="/clientepotencial" method="post">
            <div class="form-group">
                <label>Nombre</label>
                <input type="text" class="form-control" name="Nombre" />
            </div>
            <div class="form-group">
                <label>E-mail</label>
                <input type="email" class="form-control" name="Email" />
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
        </form>
        <br />
        <h2>Dashboard</h2>
        <!-- 4:3 aspect ratio -->
        <div class="embed-responsive embed-responsive-4by3">
            <iframe class="embed-responsive-item" src="https://app.powerbi.com/view?r=eyJrIjoiMzA2NjVhZTUtZjY0Ni00ZjYyLWI3OWMtN2I3N2IyZjg5YTYwIiwidCI6IjdkNDNmZGRhLTMwZDktNGM0Yi05NTQ2LTJiMDJkZmU5NDdiOSIsImMiOjl9" frameborder="0" allowFullScreen="true"></iframe>
        </div>
    </div>
</body>
</html>